        android:icon="@drawable/note"
        android:label="EverNotE"
        android:roundIcon="@drawable/note"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notes">
        <activity android:name=".Activity.UpdateNotesActivity"></activity>
